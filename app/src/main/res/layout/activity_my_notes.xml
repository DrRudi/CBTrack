<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/titlebarBackgroungColor"
        android:elevation="6dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#F6F6F6"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/thoughts_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttons"
        android:elevation="6dp"
        android:padding="20dp"
        android:text="@string/thougth_notes"
        android:textAllCaps="false"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_toolbar" />

    <Button
        android:id="@+id/emotion_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttons"
        android:elevation="6dp"
        android:padding="20dp"
        android:text="@string/emotion_notes"
        android:textAllCaps="false"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thoughts_notes_button" />

    <Button
        android:id="@+id/tags_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttons"
        android:elevation="6dp"
        android:padding="20dp"
        android:text="@string/tags_notes"
        android:textAllCaps="false"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotion_notes_button" />

    <Button
        android:id="@+id/all_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttons"
        android:elevation="6dp"
        android:padding="20dp"
        android:text="@string/all_notes"
        android:textAllCaps="false"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tags_notes_button" />


</android.support.constraint.ConstraintLayout>