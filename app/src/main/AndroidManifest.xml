        <activity android:name=".addNotes.CognitiveInfoActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".addNotes.CognitiveSelectionActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".allNotes.MyNotesActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".allNotes.AActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>