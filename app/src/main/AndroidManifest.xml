<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.cbtrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoTitleBar">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AllNotesActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".AddEmotionActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".EmotionSelectionActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".EmotionNoteActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".ThoughtNoteActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".AddThoughtActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".CognitiveInfoActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".CognitiveSelectionActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".MyNotesActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
        <activity android:name=".AActivity" android:theme="@style/AppTheme.NoTitleBar"></activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>